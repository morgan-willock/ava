// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model ShortUrl {
    id Int @id @default(autoincrement())
    dateCreated DateTime @default(now())
    url String
    slug String @default(cuid())

    @@index([slug])
}
